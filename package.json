{
  "name": "llm-sv-tabs",
  "version": "1.0.0",
  "description": "LLM-powered browser with Electron and Svelte",
  "main": "dist-main/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "clean:main": "node -e \"require('fs').rmSync('dist-main', { recursive: true, force: true })\"",
    "build:main": "npm run clean:main && tsc --project tsconfig.main.json && npm run copy:assets",
    "copy:assets": "node -e \"require('fs').mkdirSync('dist-main/main/services', {recursive: true}); require('fs').copyFileSync('src/main/services/screenshot-overlay.html', 'dist-main/main/services/screenshot-overlay.html')\"",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder -mwl",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "probe:quicklist": "npx tsx src/probe/cli.ts"
  },
  "keywords": [
    "electron",
    "svelte",
    "browser",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/svelte": "^5.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^27.0.0",
    "@types/katex": "^0.16.7",
    "@types/node": "^22.10.0",
    "@types/turndown": "^5.0.6",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "electron": "^39.2.2",
    "electron-builder": "^25.1.8",
    "happy-dom": "^20.0.11",
    "svelte": "^5.43.8",
    "svelte-check": "^4.1.1",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@napi-rs/canvas": "^0.1.68",
    "dompurify": "^3.3.1",
    "highlight.js": "^11.11.1",
    "jsdom": "^27.3.0",
    "katex": "^0.16.27",
    "marked": "^17.0.1",
    "pdfjs-dist": "^5.4.449",
    "turndown": "^7.2.2"
  }
}
