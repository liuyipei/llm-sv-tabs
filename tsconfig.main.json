{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-main",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "noEmit": false
  },
  "include": [
    "src/main/**/*.ts",
    "src/types.ts",
    "src/utils/**/*.ts",
    "src/probe/**/*.ts",
    "src/shared/**/*.ts"
  ],
  "exclude": [
    "src/ui",
    "node_modules"
  ]
}
