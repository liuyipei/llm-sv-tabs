{
  "name": "capture-tiles",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Minimal Electron app for capturing webpages as overlapping screenshot tiles",
  "main": "dist-main/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json && npm run bundle:preload",
    "bundle:preload": "esbuild dist-main/main/preload.js --bundle --platform=node --external:electron --outfile=dist-main/main/preload.bundle.js",
    "start": "npm run build && electron .",
    "electron:dev": "electron .",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.main.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tsconfig/svelte": "^5.0.2",
    "concurrently": "^8.2.2",
    "electron": "^33.0.0",
    "esbuild": "^0.20.0",
    "svelte": "^5.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.4.0",
    "vitest": "^2.0.0"
  }
}
