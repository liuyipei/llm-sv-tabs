{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "$lib/*": ["./src/lib/*"],
      "$components/*": ["./src/components/*"],
      "$app-types/*": ["../../src/types/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.svelte", "../../src/types/**/*.ts"]
}
